    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="350">
            <Button Background="Transparent"  HorizontalAlignment="Left">
                <materialDesign:PackIcon Margin="0" Foreground="{StaticResource ThemeColorBrush}" Kind="ArrowBack" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Button>
            
            <Button Style="{StaticResource MenuButtonStyle}"
                    IsEnabled="False"
                    Foreground="OrangeRed"
                    Content="Create user" />
            <Border BorderThickness="0,0,0,1"
                    BorderBrush="LightGray"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="0,10" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <TextBlock Text="Name"
                           Style="{StaticResource CustomTextblockStyle}" />
                <TextBox x:Name="UserNameTextBox"
                         Style="{StaticResource CustomTextboxStyle}"
                         Grid.Column="1"
                         Text="{Binding Username}"
                         />


                <TextBlock Text="Password"
                           Style="{StaticResource CustomTextblockStyle}"
                           Grid.Row="1" />
                <PasswordBox x:Name="PasswordTextBox"
                         Style="{StaticResource CustomPasswordBoxStyle}"
                         Grid.Column="1"
                             Grid.Row="1"
                             utils:PasswordHelper.Attach="True" utils:PasswordHelper.Password="{Binding Password, Mode=TwoWay}"
                         />
                <TextBlock Text="Permission"
                           Style="{StaticResource CustomTextblockStyle}"
                           Grid.Row="2" />

                <ComboBox ItemsSource="{Binding Source={utils:Enumeration {x:Type dto:Permission}}}"
                      DisplayMemberPath="Description"
                      SelectedValue="{Binding UserPermission, Mode=TwoWay}"
                      SelectedValuePath="Value"
                          Grid.Column="1"
                          Grid.Row="2"
                          Margin="10,5"
                          Padding="5,0"
                          Style="{StaticResource RubyCombobox}"/>
                <Button x:Name="CreateButton"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Content="Create"
                        Command="{Binding CreateUserCommand}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource ToolbarButtonStyle}"
                               TargetType="Button">
                            <Setter Property="IsEnabled"
                                    Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=AccountNameTextBox, Path=Text}"
                                             Value="">
                                    <Setter Property="IsEnabled"
                                            Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
